// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{
  id                Int            @id @unique @default(autoincrement())
  name              String
  profileUrl        String
  avatarUrl         String
  email             String?
  username          String

  likedProfiles     User[]        @relation("liked")
  likedProfileID    Int?
  likedProfile      User?          @relation("liked", fields: [likedProfileID], references: [id], onDelete: SetNull)

	likedBys           User[]        @relation("likedBy")
  likedByID         Int?
  likedBy           User?          @relation("likedBy", fields: [likedByID], references: [id], onDelete: SetNull)
}